<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ex_history_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp"
    android:layout_marginHorizontal="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle_white_border_gray"
        android:src="@drawable/ic_indoor_workout_green_50" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="fill"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="fill_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_title"
            android:text="@string/in_door_workout_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/history_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:29:10"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>
    <TextView
        android:id="@+id/history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:text="20/5/2024"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginRight="10dp"/>
</LinearLayout>

