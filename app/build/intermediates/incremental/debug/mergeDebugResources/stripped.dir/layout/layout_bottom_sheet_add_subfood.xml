<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/sub_food_layout_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/define_dimen_6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/subfood_item_info"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/dialog_subfood_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Test 1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dialog_subfood_sheet_close_btn"
                        android:background="@drawable/ic_close_red_36"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="18sp"
                            android:text="@string/carbs"
                            android:layout_alignParentStart="true"/>
                        <TextView
                            android:id="@+id/dialog_subfood_item_carb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="372 Kcal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondarytext"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="18sp"
                            android:text="@string/protein"
                            android:layout_alignParentStart="true"/>
                        <TextView
                            android:id="@+id/dialog_subfood_item_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="372 Kcal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondarytext"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="18sp"
                            android:text="@string/fat"
                            android:layout_alignParentStart="true"/>
                        <TextView
                            android:id="@+id/dialog_subfood_item_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="372 Kcal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondarytext"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="20sp"
                            android:text="@string/title_calories"
                            android:layout_alignParentStart="true"/>
                        <TextView
                            android:id="@+id/dialog_subfood_item_calo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="372 Kcal"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_servings"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" (cá»§a 100g)"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="@dimen/define_dimen_5"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dialog_subfood_tv_subtract"
                    android:layout_width="@dimen/define_dimen_40"
                    android:layout_height="@dimen/define_dimen_40"
                    android:background="@drawable/bg_circle_button_light_gray"
                    android:gravity="center"
                    android:text="@string/label_sub"
                    android:textSize="28sp" />
            </RelativeLayout>


            <EditText
                android:id="@+id/dialog_subfood_tv_count"
                android:layout_width="@dimen/define_dimen_70"
                android:layout_height="@dimen/define_dimen_40"
                android:layout_marginStart="@dimen/define_dimen_10"
                android:layout_marginEnd="@dimen/define_dimen_10"
                android:background="@drawable/bg_white_shape_border_red_corner_3"
                android:gravity="center"
                android:text="@string/label_quantity_1"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dialog_subfood_tv_add"
                    android:layout_width="@dimen/define_dimen_40"
                    android:layout_height="@dimen/define_dimen_40"
                    android:background="@drawable/bg_circle_button_light_gray"
                    android:gravity="center"
                    android:text="@string/label_add"
                    android:textSize="24sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_tv_subfood_add_to_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_red_shape_corner_30"
            android:gravity="center"
            android:padding="@dimen/define_dimen_10"
            android:layout_marginHorizontal="110dp"
            android:text="@string/add_subfood"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>
</RelativeLayout>